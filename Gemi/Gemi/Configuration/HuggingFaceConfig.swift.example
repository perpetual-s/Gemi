import Foundation

/// HuggingFace Configuration
/// 
/// SETUP INSTRUCTIONS:
/// For mlx-community models: NO TOKEN REQUIRED!
/// The mlx-community/gemma-3n-E4B-it-4bit model is public and doesn't need authentication.
/// 
/// For other models (optional):
/// 1. Copy this file to HuggingFaceConfig.swift (remove .example)
/// 2. Replace YOUR_TOKEN_HERE with your HuggingFace token if needed
/// 3. Get tokens from: https://huggingface.co/settings/tokens
/// 
/// This file is gitignored to protect your token if you add one
struct HuggingFaceConfig {
    static let token = "YOUR_TOKEN_HERE"
    
    // Verify token is set
    static var isConfigured: Bool {
        token != "YOUR_TOKEN_HERE" && !token.isEmpty
    }
}